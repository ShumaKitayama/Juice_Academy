# JWT設定
JWT_SECRET=your-secure-jwt-secret-key-for-development-minimum-32-characters-long
JWT_EXPIRATION=24h

# データベース設定
MONGODB_URI=mongodb://juice_academy_app:app_secure_password_change_in_production@mongodb:27017/juice_academy?authSource=juice_academy
MONGODB_DATABASE=juice_academy

# MongoDB認証（Docker Compose用 - docker-compose.prod.ymlで使用）
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=your-strong-mongodb-root-password-change-me

# Stripe API設定
# docker-compose.prod.ymlでの参照用に STRIPE_PUBLISHABLE_KEY も定義することを推奨
STRIPE_SECRET_KEY=sk_test_dummy
STRIPE_PUBLIC_KEY=pk_test_dummy
STRIPE_PUBLISHABLE_KEY=pk_test_dummy
STRIPE_DEFAULT_PRICE_ID=price_dummy

# フロントエンド向けの環境変数（Vite/React用）
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_dummy
VITE_STRIPE_PRODUCT_ID=prod_dummy
VITE_STRIPE_PRICE_ID=price_dummy
VITE_API_URL=http://localhost:8080

# その他のアプリケーション設定
APP_ENV=development
APP_PORT=8080
FRONTEND_URL=http://localhost:3000

# Redis設定
REDIS_ADDR=redis:6379
REDIS_PASSWORD=

# セキュリティ設定
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ENABLE_DEBUG_LOGS=true
