# 環境変数設定例
# このファイルをコピーして .env.production を作成してください

# データベース設定
MONGODB_URI=mongodb://mongodb:27017/juice_academy
MONGODB_DATABASE=juice_academy

# JWT設定
JWT_SECRET=your-jwt-secret-key-minimum-32-characters
JWT_EXPIRATION=24h

# Stripe設定
STRIPE_SECRET_KEY=sk_test_or_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_or_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# アプリケーション設定
APP_ENV=development
APP_PORT=8080
FRONTEND_URL=http://localhost:3000

# MongoDB認証
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=your-mongodb-password

# セキュリティ設定
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ENABLE_DEBUG_LOGS=true

# テスト環境設定
MONGODB_TEST_URI=mongodb://localhost:27018
ENABLE_TESTS=true
TEST_MODE=development
